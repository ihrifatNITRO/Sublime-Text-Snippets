	<content><![CDATA[
// function to find substring of a string
void SUB_str(string si , int n){ // n = si.size()
   for(int i=0;i<n;i++){
      for(int len = 1;len <= n-i; len++){
         cout << si.substr(i , len) << "\n";
      }
   }
}
]]></content>
